<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHighlight">@color/gray</item>
        <item name="android:textColorHint">@color/login_border</item>
        <item name="android:background">@drawable/input_text_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">@dimen/margin_32</item>
        <item name="android:layout_marginEnd">@dimen/margin_32</item>
        <item name="android:layout_marginStart">@dimen/margin_32</item>
        <item name="android:layout_marginBottom">@dimen/margin_10</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTabTheme"
        parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>


    <style name="EditTextStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHighlight">@color/gray</item>
        <item name="android:textColorHint">@color/login_border</item>
        <item name="android:background">@drawable/input_text_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHighlight">@color/gray</item>
        <item name="android:textColorHint">@color/login_border</item>
        <item name="android:background">@drawable/input_text_bg2</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="endIconTint">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="android:bottomLeftRadius">@dimen/radius</item>
        <item name="android:bottomRightRadius">@dimen/radius</item>
        <item name="android:topLeftRadius">@dimen/radius</item>
        <item name="android:topRightRadius">@dimen/radius</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    <style name="TextButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:layout_marginBottom">@dimen/margin_10</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TextItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>

    </style>
</resources>
