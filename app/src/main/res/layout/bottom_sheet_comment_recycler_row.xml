<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin=".5dp"
    android:background="@color/white"
   >

    <LinearLayout
        android:id="@+id/profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
         >
        <ImageView
            android:id="@+id/sender_pic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="2dp"
            android:src="@drawable/ic_profile_pic"
           />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_pic">

        <LinearLayout
            android:id="@+id/name_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sender_name"
                android:text="John Doe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textAllCaps="true"
                android:padding="@dimen/padding_5"
                android:textColor="@color/text_gray"
                />
                 <TextView
                     android:id="@+id/text_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                     android:padding="@dimen/padding_5"
                    android:textSize="@dimen/text_size_10"
                     android:textColor="@color/text_gray"
                     android:text="06:00"
                   />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:padding="8dp"
            android:textAlignment="textStart"
            android:gravity="start"
            android:text="hi man, how are you?"
            android:textColor="@color/black"
            android:layout_below="@+id/name_time_container"
            android:textSize="@dimen/text_size_14"
            />

        <LinearLayout
            android:id="@+id/like_dislike_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_comment">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_5">
            <ImageView
                android:id="@+id/img_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:src="@drawable/ic_like2"
                android:layout_marginStart="@dimen/margin_5"
                />
                <TextView
                    android:id="@+id/text_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/padding_5"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/text_gray"
                    android:text="50"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_5">
                <ImageView
                    android:id="@+id/img_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_5"
                    android:src="@drawable/ic_dislike2"
                    android:layout_marginStart="@dimen/margin_5"
                    />
                <TextView
                    android:id="@+id/text_dislike_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/padding_5"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/text_gray"
                    android:text="50"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>